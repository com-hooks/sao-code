{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "declarationDir": "./dist/core",
    "outDir": "./dist/core",
    "baseUrl": "./",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "allowJs": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "@rspack/core/module",
    ],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "packages/*": [
        "./packages/*"
      ]
    }
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
  ],
}